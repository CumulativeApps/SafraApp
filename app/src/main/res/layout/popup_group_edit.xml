<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvDeleteGroup"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/delete_group"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            android:textColor="@color/text_color"
            app:drawableStartCompat="@drawable/ic_delete"
            android:drawablePadding="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="1"
            app:layout_constraintBottom_toTopOf="@id/tvRemoveAllParticipants"
            android:clickable="true"
            android:focusable="true"
            android:background="?selectableItemBackground"/>

        <TextView
            android:id="@+id/tvRemoveAllParticipants"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/remove_all_participants"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            android:textColor="@color/text_color"
            app:drawableStartCompat="@drawable/ic_delete"
            android:drawablePadding="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvDeleteGroup"
            app:layout_constraintVertical_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:background="?selectableItemBackground"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>