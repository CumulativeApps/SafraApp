<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/viewHorizontalLine"
        android:layout_width="4dp"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="@id/etCascadingOption"
        app:layout_constraintBottom_toBottomOf="@id/etCascadingOption"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/viewVerticalLine"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="16dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/etCascadingOption"
        app:layout_constraintBottom_toBottomOf="@id/rvChildOption"
        app:layout_constraintStart_toStartOf="@id/etCascadingOption" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etCascadingOption"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_cascading_field"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        tools:text="Option 1"
        android:inputType="textNoSuggestions|textCapSentences"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        android:textColor="@color/text_color"
        android:enabled="false"
        app:layout_constraintStart_toEndOf="@id/viewHorizontalLine"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivRemove"/>

    <ImageView
        android:id="@+id/ivRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:padding="4dp"
        android:src="@drawable/ic_close"
        app:tint="@color/error_color"
        app:layout_constraintTop_toTopOf="@id/etCascadingOption"
        app:layout_constraintBottom_toBottomOf="@id/etCascadingOption"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/ivSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:paddingBottom="4dp"
        android:gravity="center_vertical"
        android:text="@string/save"
        android:textColor="?colorPrimary"
        android:visibility="gone"
        android:background="@drawable/bg_upgrade_box"
        app:layout_constraintTop_toTopOf="@id/tvAddChild"
        app:layout_constraintBottom_toBottomOf="@id/tvAddChild"
        app:layout_constraintEnd_toStartOf="@id/tvAddChild"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <TextView
        android:id="@+id/ivEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:paddingBottom="4dp"
        android:gravity="center_vertical"
        android:text="@string/edit"
        android:textColor="?colorPrimary"
        android:background="@drawable/bg_upgrade_box"
        app:layout_constraintTop_toTopOf="@id/tvAddChild"
        app:layout_constraintBottom_toBottomOf="@id/tvAddChild"
        app:layout_constraintEnd_toStartOf="@id/tvAddChild"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <TextView
        android:id="@+id/tvAddChild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="6dp"
        android:paddingTop="4dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:paddingBottom="4dp"
        android:gravity="center_vertical"
        android:text="@string/add_child"
        android:textColor="?colorPrimary"
        android:background="@drawable/bg_upgrade_box"
        app:layout_constraintTop_toBottomOf="@id/ivRemove"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvChildOption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@id/viewVerticalLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAddChild"/>

</androidx.constraintlayout.widget.ConstraintLayout>